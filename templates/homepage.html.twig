<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ZOO company - calculation{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('style.css') }}" type="text/css"  />
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <h1>ZOO company</h1>

            <div id="form">
                {{ form_start(form) }}
                    {{ form_row(form.carrier) }}
                    {{ form_row(form.weight) }}
                    <button type="submit" class="btn btn-primary">Calculate price</button>
                {{ form_end(form) }}


            </div>

            {% if result is defined and result !== null %}
                <div id="result">
                    <p>carrier - {{ result.carrier}}</p>
                    <p>weight - {{ result.weight }}</p>
                    <p>currency - {{ result.currency }}</p>
                    <p>price - {{ result.price }}</p>
                </div>
            {% endif %}

        {% endblock %}
    </body>
</html>
